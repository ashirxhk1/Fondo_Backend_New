@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notifications" />

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle-fill"></i>&nbsp; Create Category </a>
        </div>
    </div>
    

<table class="table table-bordered table-striped" style="width:100%" >

    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order 
            </th>
            <th>
                Created Date
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model)
        {
            
            <tr>
                <td style="width:40%">
                    @item.Name
                </td>
                <td style="width:20%">
                    @item.DisplayOrder
                </td>

                <td style="width:20%">
                    @item.CreatedDate.ToLongDateString();
                </td>
                <td style="width:20%">
                        <a class="btn btn-secondary" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" ><i class="bi bi-pencil-square"></i> Edit</a>
                        <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>

                </td>
            </tr>
        }

    </tbody>
</table>

</div>


